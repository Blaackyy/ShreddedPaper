+        return this.map.put(key, value);
+    }
+
+    @Override
+    public V remove(final int key) {
+        return this.map.remove(key);
+    }
+
+    @Override
+    public V put(final Integer key, final V value) {
+        return this.map.put(key, value);
+    }
+
+    @Override
+    public V get(final Object key) {
+        return this.map.get(key);
+    }
+
+    @Override
